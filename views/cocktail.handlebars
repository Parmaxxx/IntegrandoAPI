<div class="container text-center bg-success p-2 text-dark bg-opacity-25">
    <div class="row">
<nav class="navbar bg-info.bg-gradient mr-2 ml-2">
  <div class="container-fluid">
    <span class="navbar-brand h1 text-white mx-auto">Pesquise qualquer CockTail Por Nome ou Ingrediente</span>
  </div>
</nav>
<form  class="text-center" action="/" method="GET">
  <div class="row mb-11 justify-content-center">
          <div class="row">
    <div class="col-sm-7  mx-3">
      <input type="text" class="form-control" id="searchInput" name="cocktailName" placeholder="Digite Aqui sua pesquisa">
    </div>
    <div class="col-sm-1">
      <button type="submit" class="btn btn-outline-secondary">Pesquisar</button>
    </div>
  </div>
  </div>
</form>


<div class="col-sm-11 accordion accordion-flush mt-5 mb-5 mx-4" id="accordionFlushExample">
  {{#each cocktails}}
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{@index}}" aria-expanded="false" aria-controls="collapse{{@index}}">
          {{this.name}}
        </button>
      </h2>
      <div id="collapse{{@index}}" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
        <div class="accordion-body">
          <h5>Ingredientes:</h5>
          {{#each this.translatedIngredients}}
            <p>{{this}}</p>
          {{/each}}
          <h5>Instruções:</h5>
          <p>{{this.translatedInstructions}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>

